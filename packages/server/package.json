{
  "name": "@perseid/server",
  "version": "2.0.0",
  "license": "MIT",
  "type": "module",
  "main": "./main.js",
  "types": "./types.d.ts",
  "description": "Dynamic, data model-based REST APIs generator",
  "repository": "https://github.com/openizr/perseid",
  "bugs": "https://github.com/openizr/perseid/issues",
  "contributors": [
    {
      "name": "Matthieu Jabbour",
      "email": "matthieu.jabbour@gmail.com",
      "homepage": "https://github.com/matthieujabbour"
    }
  ],
  "keywords": [
    "perseid",
    "server",
    "api",
    "generator",
    "rest"
  ],
  "devDependencies": {
    "@perseid/dev-kit": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/multiparty": "^0.0.36",
    "@types/pg": "^8.11.6"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@perseid/dev-kit/main.cjs"
    ],
    "overrides": [
      {
        "files": [
          "src/__mocks__/**/*.ts"
        ],
        "rules": {
          "max-classes-per-file": "off",
          "no-await-in-loop": "off"
        }
      },
      {
        "files": [
          "*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/unbound-method": "off"
        }
      },
      {
        "files": [
          "*.d.ts"
        ],
        "rules": {
          "no-shadow": "off",
          "no-use-before-define": "off",
          "max-classes-per-file": "off"
        }
      },
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-floating-promises": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@perseid/core": "^2.0.1",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multiparty": "^4.2.3",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2"
  },
  "devKitConfig": {
    "target": "node",
    "runInDev": true,
    "splitChunks": false,
    "entries": {
      "dist": "./scripts/main.ts",
      "main": "./__playground__/index.ts"
    },
    "srcPath": "src",
    "distPath": "dist",
    "banner": "/*!\n * Copyright (c) Openizr. All Rights Reserved.\n *\n * This source code is licensed under the MIT license found in the\n * LICENSE file in the root directory of this source tree.\n */"
  },
  "engines": {
    "node": ">= 20.0.0",
    "npm": ">= 9.0.0"
  },
  "scripts": {
    "test": "node_modules/@perseid/dev-kit/scripts/test",
    "dev": "node node_modules/@perseid/dev-kit/scripts/dev.js",
    "build:types": "cp src/scripts/types.d.ts dist && mv dist/dist.js dist/main.js && mv dist/dist.js.map dist/main.js.map",
    "build": "node node_modules/@perseid/dev-kit/scripts/build.js && yarn run build:types",
    "check": "node node_modules/@perseid/dev-kit/scripts/check.js",
    "postinstall": "rm -f node_modules/.eslintcache && mkdir -p node_modules/.cache && test -n \"$POSTINSTALLED\" || POSTINSTALLED=1 yarn add --peer mysql2 pg mongodb fastify express"
  },
  "peerDependencies": {
    "express": "^4.19.2",
    "fastify": "^4.28.1",
    "mongodb": "^6.8.0",
    "mysql2": "^3.11.0",
    "pg": "^8.12.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "express": {
      "optional": true
    }
  }
}
