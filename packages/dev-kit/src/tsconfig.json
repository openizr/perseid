{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "react",
    "newLine": "LF",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6",
    "lib": [
      "ES6",
      "ES7",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "../../../"
  ],
  "exclude": [
    "../../../coverage",
    "../../../doc"
  ]
}