{
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".tsx",
          ".jsx"
        ]
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "jsx": "never"
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "./*",
          "../*"
        ]
      }
    ],
    "arrow-parens": [
      "error",
      "always"
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts",
          ".tsx",
          "js",
          "jsx",
          ".json"
        ],
        "paths": [
          "src"
        ]
      }
    }
  },
  "env": {
    "browser": true
  }
}